{
  "manifest_version": 2,
  "name": "lemonde.fr, zen mode and premium hack",
  "short_name": "lemonde hack",
  "description": "This extension gives you free access to the zen mode of lemonde.fr for free and paid articles.",
  "version": "1.0",
  "version_name": "1.0 stable version",
  "minimum_chrome_version": "50",
  "offline_enabled": true,
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "browser_action": {
    "default_title": "lemonde hack",
    "default_icon": {
      "19": "icons/icons19.png",
      "38": "icons/icons38.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
