{
  "manifest_version": 2,
  "name": "lemonde.fr, hack du mode zen et des articles",
  "short_name": "lemonde hack",
  "description": "Cette extension vous donne un acc√®s libre au mode zen de tous les articles du site lemonde.fr.",
  "version": "1.0",
  "version_name": "1.0, version stable",
  "offline_enabled": true,
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "browser_action": {
    "default_title": "lemonde hack",
    "default_icon": {
      "19": "icons/icons19.png",
      "38": "icons/icons38.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.lemonde.fr/*",
        "https://www.lemonde.fr/*"
      ],
      "css": ["main.css"]
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
